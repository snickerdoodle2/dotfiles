# open terminal
lalt - q : open -na /Applications/Alacritty.app

# change focus
lalt - h : yabai -m window --focus west
lalt - j : yabai -m window --focus south
lalt - k : yabai -m window --focus north
lalt - l : yabai -m window --focus east

# move window to another space
shift + lalt - 1 : yabai -m window --space 1
shift + lalt - 2 : yabai -m window --space 2
shift + lalt - 3 : yabai -m window --space 3
shift + lalt - 4 : yabai -m window --space 4
shift + lalt - 5 : yabai -m window --space 5
shift + lalt - 6 : yabai -m window --space 6
shift + lalt - 7 : yabai -m window --space 7
shift + lalt - 8 : yabai -m window --space 8
shift + lalt - 9 : yabai -m window --space 9
shift + lalt - 0 : yabai -m window --space 10

# increase window size
shift + lalt - h : yabai -m window --resize left:-20:0
shift + lalt - j : yabai -m window --resize bottom:0:20
shift + lalt - k : yabai -m window --resize top:0:-20
shift + lalt - l : yabai -m window --resize right:20:0

# decrease window size
fn + lalt - l : yabai -m window --resize left:20:0
fn + lalt - k : yabai -m window --resize bottom:0:-20
fn + lalt - j : yabai -m window --resize top:0:20
fn + lalt - h : yabai -m window --resize right:-20:0

# toggle between float and tiling
shift + lalt - f : yabai -m window --toggle float

# rebalance tree
lalt - r : yabai -m space --balance

# toggle fullscreen
lalt - f : yabai -m window --toggle zoom-fullscreen 

# toggle split
lalt - s : yabai -m window --toggle split
